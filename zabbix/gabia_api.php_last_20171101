function up_file($file){

	$file=$_FILES[text02][tmp_name];
	if(is_uploaded_file($file)){

   		$fp = fopen($file, "r") or die("no file");
   		while(!feof($fp)){

      			$buffer .=fgets($fp);
			$ip_arr[]=$buffer;
   		}

		//	$ip_arr;
			return $ip_arr;

   			fclose($fp);
	}	

}

